<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog</title>
    <link rel="stylesheet" href="styles/main.css">
</head>
<body>
    <h1>Blog Posts</h1>
    <a href="/new-post">Create a New Post</a>
    <div>
        <% if (posts.length === 0) { %>
            <p>No posts yet.</p>
        <% } else { %>
            <% posts.forEach((post, index) => { %>
                <div>
                    <h2><%= post.title %></h2>
                    <p><%= post.content %></p>
                    <a href="/edit-post/<%= index %>">Edit</a>
                    <form action="/delete-post/<%= index %>" method="POST" style="display:inline;">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }) %>
        <% } %>
    </div>
</body>
</html>
